# Maintainer: nshan651 <nshan651@aur.archlinux.org>
pkgname=clefd
pkgver=0.0.1
pkgrel=1
pkgdesc="A universal keybindings manager daemon"
arch=('x86_64')
url="https://github.com/nshan651/clefd"
license=('GPL3')
depends=('libudev.so' 'libinput' 'libxkbcommon')
makedepends=('cargo' 'git')
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
options=(!debug)
sha256sums=('cfac7ad890920cc1c1b6b56b0a9079408c4499e1b8473b5b88e0f10d928bc1ed')

build() {
    cd "$pkgname-$pkgver"
	cargo build --release --locked
}

package() {
    cd "$pkgname-$pkgver"
	install -Dm755 "target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
    install -Dm644 "dist/systemd/$pkgname.service" \
            "$pkgdir/usr/lib/systemd/user/$pkgname.service"
}
