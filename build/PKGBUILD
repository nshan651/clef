# Maintainer: nshan651 <nshan651@aur.archlinux.org>
pkgname=clefd
pkgver=0.0.1
pkgrel=1
pkgdesc="A universal keybindings manager daemon"
arch=('x86_64')
url="https://github.com/nshan651/clef"
license=('GPL3')
depends=('libudev.so' 'libinput' 'libxkbcommon')
makedepends=('cargo' 'git')
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('SKIP')

build() {
    cd "$pkgname-$pkgver"
	cargo build --release --locked
}

package() {
    cd "$pkgname-$pkgver"
	install -Dm755 "target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
}
